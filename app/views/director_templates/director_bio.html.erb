    <h1>
  Director #<%= @director.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @director.id %> " class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@director.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography </h2>

<table border="1">
  <tbody><tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @movies.each do |film| %>
    <tr>
        <td>
          <%= film.id %>
        </td>

        <td>
          <img src = "<%= film.image %>" style="width:250px;">
        </td>

        <td>
          <%= film.title %>
        </td>

        <td>
          <%= film.year %>
        </td>

        <td>
          <%= @director.name %>
        </td>

        <td>
          <a href="/movies/<%= film.id %>">
            Show details
          </a>
        </td>
    </tr>
  <% end %>
</tbody></table>

  

